<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        .sidebar {
            min-height: 100vh;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }
        .sidebar .nav-link {
            color: rgba(255,255,255,0.8);
            padding: 12px 20px;
            margin: 5px 15px;
            border-radius: 8px;
            transition: all 0.3s;
        }
        .sidebar .nav-link:hover, .sidebar .nav-link.active {
            background: rgba(255,255,255,0.2);
            color: white;
        }
        .sidebar .nav-link.active {
            background: rgba(255,255,255,0.3);
            font-weight: 600;
        }
    </style>
</head>
<body>
    @{
        var controller = ViewContext.RouteData.Values["controller"]?.ToString();
        var action = ViewContext.RouteData.Values["action"]?.ToString();
    }

    <div class="d-flex">
        <!-- Sidebar -->
        <div class="sidebar text-white" style="width: 250px;">
            <div class="p-4">
                <h4 class="mb-4">
                    <i class="bi bi-apple"></i> Admin Panel
                </h4>
                <nav class="nav flex-column">
                    <a class="nav-link @(controller == "Admin" && action == "Index" ? "active" : "")" href="/Admin/Index">
                        <i class="bi bi-speedometer2"></i> Dashboard
                    </a>
                    <a class="nav-link @(controller == "Admin" && (action == "Products" || action == "CreateProduct" || action == "EditProduct") ? "active" : "")" href="/Admin/Products">
                        <i class="bi bi-box-seam"></i> Quản lý sản phẩm
                    </a>
                    <a class="nav-link @(controller == "Admin" && (action == "Orders" || action == "OrderDetail") ? "active" : "")" href="/Admin/Orders">
                        <i class="bi bi-cart-check"></i> Quản lý đơn hàng
                    </a>
                    <hr class="text-white-50" />
                    <a class="nav-link" href="/">
                        <i class="bi bi-house"></i> Vị trí trang chủ
                    </a>
                    <a class="nav-link" href="/Account/Logout">
                        <i class="bi bi-box-arrow-right"></i> Đăng xuất
                    </a>
                </nav>
            </div>
        </div>

        <!-- Main Content -->
        <div class="flex-grow-1">
            <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
                <div class="container-fluid">
                    <span class="navbar-brand">@ViewData["Title"]</span>
                    <div class="ms-auto">
                        <span class="navbar-text">
                            <i class="bi bi-person-circle"></i> 
                            @(ViewContext.HttpContext.Session.GetString("User") ?? "Admin")
                        </span>
                    </div>
                </div>
            </nav>

            <main class="p-4">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>