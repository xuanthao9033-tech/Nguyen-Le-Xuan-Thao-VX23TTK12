@model IphoneStoreFE.Models.ErrorViewModel

@{
    ViewData["Title"] = "Error";
}

<div class="container text-center mt-5">
    <h1 class="text-danger">Đã xảy ra lỗi</h1>

    <p class="text-muted">
        @ViewBag.ErrorMessage
    </p>

    @if (Model != null && Model.ShowRequestId)
    {
        <p><strong>Request ID:</strong> @Model.RequestId</p>
    }

    <a href="/" class="btn btn-primary mt-3">⬅ Quay lại trang chủ</a>
</div>
