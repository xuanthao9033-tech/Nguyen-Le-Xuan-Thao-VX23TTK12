@model IphoneStoreBE.VModels.ProductUpdateVModel
@using System.IO
@{
    ViewData["Title"] = "Cập nhật sản phẩm";
    Layout = "_AdminLayout";
    var categories = ViewBag.Categories as List<IphoneStoreBE.VModels.CategoryGetVModel> ?? new List<IphoneStoreBE.VModels.CategoryGetVModel>();
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="bi bi-pencil-square"></i> Cập nhật sản phẩm
        </h2>
        <a href="/Admin/Products" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Quay lại
        </a>
    </div>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-body">
            <form method="post" asp-action="EditProduct" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="ImageUrl" />

                <div class="row">
                    <div class="col-md-6">
                        <!-- Thông tin cơ bản -->
                        <div class="mb-3">
                            <label asp-for="ProductName" class="form-label">Tên sản phẩm <span class="text-danger">*</span></label>
                            <input asp-for="ProductName" class="form-control" required />
                            <span asp-validation-for="ProductName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Sku" class="form-label">SKU <span class="text-danger">*</span></label>
                            <input asp-for="Sku" class="form-control" required />
                            <small class="text-muted">Mã sản phẩm (ví dụ: IP14PM, IPSE3)</small>
                            <span asp-validation-for="Sku" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Price" class="form-label">Giá <span class="text-danger">*</span></label>
                            <input asp-for="Price" type="number" class="form-control" required />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CategoryId" class="form-label">Danh mục <span class="text-danger">*</span></label>
                            <select asp-for="CategoryId" class="form-select" required>
                                <option value="">-- Chọn danh mục --</option>
                                @foreach (var category in categories)
                                {
                                    <option value="@category.Id">@category.CategoryName</option>
                                }
                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <!-- Thông số kỹ thuật -->
                        <div class="mb-3">
                            <label asp-for="Color" class="form-label">Màu sắc</label>
                            <input asp-for="Color" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Capacity" class="form-label">Dung lượng</label>
                            <input asp-for="Capacity" class="form-control" placeholder="Ví dụ: 128GB, 256GB" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="ProductType" class="form-label">Loại sản phẩm</label>
                            <input asp-for="ProductType" class="form-control" placeholder="Ví dụ: Smartphone, Laptop" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Warranty" class="form-label">Bảo hành</label>
                            <input asp-for="Warranty" class="form-control" placeholder="Ví dụ: 12 tháng" />
                        </div>
                    </div>
                </div>

                <!-- Mô tả -->
                <div class="mb-3">
                    <label asp-for="SpecificationDescription" class="form-label">Mô tả sản phẩm</label>
                    <textarea asp-for="SpecificationDescription" class="form-control" rows="4"></textarea>
                </div>

                <!-- Hình ảnh -->
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label">Hình ảnh hiện tại</label>
                            @if (!string.IsNullOrEmpty(Model.ImageUrl))
                            {
                                <div>
                                    <img src="@Url.Content(Model.ImageUrl)" alt="@Model.ProductName" 
                                         class="img-thumbnail" style="max-width: 200px; max-height: 200px;" />
                                    <p class="text-muted mt-2">
                                        @{
                                            var fileName = System.IO.Path.GetFileName(Model.ImageUrl);
                                        }
                                        @fileName
                                    </p>
                                </div>
                            }
                            else
                            {
                                <p class="text-muted">Chưa có hình ảnh</p>
                            }
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="imageFile" class="form-label">
                                Cập nhật hình ảnh mới
                                <small class="text-muted">(Để trống nếu không muốn thay đổi)</small>
                            </label>
                            <input type="file" name="imageFile" id="imageFile" class="form-control" accept=".png,.jpg,.jpeg" />
                            <small class="text-muted d-block mt-1">
                                <i class="bi bi-info-circle"></i> File sẽ được lưu với tên: <strong>@(Model.Sku).png</strong>
                            </small>
                            <small class="text-muted">Chấp nhận: .png, .jpg, .jpeg (tối đa 5MB)</small>
                        </div>
                    </div>
                </div>

                <!-- Trạng thái -->
                <div class="mb-3">
                    <div class="form-check">
                        @{
                            var isChecked = Model.IsActive ?? true;
                        }
                        <input type="checkbox" name="IsActive" id="IsActive" class="form-check-input" value="true" checked="@isChecked" />
                        <input type="hidden" name="IsActive" value="false" />
                        <label for="IsActive" class="form-check-label">
                            Đang hoạt động (sản phẩm có thể bán)
                        </label>
                    </div>
                </div>

                <!-- Buttons -->
                <div class="d-flex justify-content-end gap-2">
                    <a href="/Admin/Products" class="btn btn-secondary">
                        <i class="bi bi-x-circle"></i> Hủy
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle"></i> Cập nhật sản phẩm
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@4.0.0/dist/jquery.validate.unobtrusive.min.js"></script>
    
    <script>
        // Preview ảnh khi chọn file
        document.getElementById('imageFile').addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    const img = document.querySelector('img.img-thumbnail');
                    if (img) {
                        img.src = e.target.result;
                    }
                }
                reader.readAsDataURL(file);
            }
        });
    </script>
}
